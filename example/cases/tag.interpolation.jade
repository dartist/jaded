mixin item(icon)
  li
    if attributes['href'] != null
      a(attributes)
        img.icon(src=icon)
        block
    else
      span(attributes)
        img.icon(src=icon)
        block

ul
  +item('contact') Contact
  +item(href='/contact') Contact
